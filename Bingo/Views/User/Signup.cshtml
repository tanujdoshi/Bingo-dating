@model Bingo.Models.User

@{
    ViewBag.Title = "Create";
}

<h2>SignUp</h2>
<div style="position: absolute; right: 13vw; top: 75px; display: inline-block;">
    Already a user?
    @Html.ActionLink("Login", "Login", null, new { @class = "btn btn-sm btn-warning" })
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="background-color: #D4E9ED; max-width: 480px; padding:40px; margin: auto; border-radius: 10px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 5px;" } })
                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                @Html.ValidationMessage("EmailExists", new { @class = "text-danger" })


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 5px;" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 5px;" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                @Html.ValidationMessage("UsernameExists", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 5px;" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 5px;" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButton("Gender", "Male", true, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 5px;" } })
                Male &nbsp;
                @Html.RadioButton("Gender", "Female", false, new { htmlAttributes = new { @class = "form-control" } })
                Female &nbsp;
                @Html.RadioButton("Gender", "Other", false, new { htmlAttributes = new { @class = "form-control" } })
                Other &nbsp;
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Birthdate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Birthdate, new { type = "date", @class = "form-control", @style = "margin-left: 5px;" })
                @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DisplayBirthdate, new { htmlAttributes = new { @style = "margin-left: 80px;" } })
                Display Birthdate?
                @Html.ValidationMessageFor(model => model.DisplayBirthdate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top: 20px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-danger" style = "margin-left: 5px;" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
