<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <title>@ViewBag.Title - Bingo Dating App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #D42A48; border-bottom: 0px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bingo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="width:90%;">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["UserId"] == null)
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("My Account", "Index", "User")</li>
                        <li>@Html.ActionLink("Notifications", "NotificationsReceived", "Match")</li>
                        <li>@Html.ActionLink("Chats", "ShowChats", "Match")</li>
                        <li>@Html.ActionLink("List", "List", "User")</li>
                        <li style="float:right;">@Html.ActionLink("Logout", "Logout", "User")</li>
                        <li style="float:right; margin-top:12px;">
                            <form action="@Url.Action("List", "User")" method="post" class="form-inline my-2 my-lg-0">
                                <input type="text" name="SearchString" class="form-control mr-sm-2" type="search" placeholder="Search..." aria-label="Search">
                                <button class="btn btn-warning my-2 my-sm-0" type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bingo Dating App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("JavaScript", required: false)
</body>
</html>
